<% if user_signed_in? %>
    <% if current_user.following? user %>
      <%= link_to "unfollow", relationship_path(id: user.id), method: :delete, remote: true %>
    <% else %>
      <%= link_to "follow", relationships_path(id: user.id), method: :post, remote: true %>
    <% end %>
<span>
    <%= pluralize user.followed_relationships.count, "follow" %>
  </span>
<% else %>
  <span class="post_like">
    <%= pluralize user.followed_relationships.count, "follow" %>
  </span>
<% end %>
